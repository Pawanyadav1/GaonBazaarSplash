<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_color"
    tools:context=".fragments.homefragment">

    <RelativeLayout
        android:id="@+id/menulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/menu"
            style="@style/CardView.Dark"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_menu" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/menulo">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menulo"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="WELCOME"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold|italic" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:layout_below="@+id/txt"
            android:gravity="center"
            android:text="Gaon Bazaar"
            android:textColor="@color/DarkOrange"
            android:textSize="25dp"
            android:textStyle="bold|italic"/>

        <!-- <ViewFlipper
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:id="@+id/flipper"
             android:visibility="gone"
             android:layout_margin="20dp"
             android:layout_gravity="center"/>
-->


        <RelativeLayout
            android:id="@+id/buy"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/txt2"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/buyitems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="BUY"
                    android:layout_marginEnd="60dp"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold|italic"
                    />

                <ImageView
                    android:id="@+id/buy1"
                    android:layout_width="63dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/imagesell" />


            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sell"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_below="@id/buy"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sell_item"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                app:cardCornerRadius="30dp">


                <TextView
                    android:id="@+id/txt12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="60dp"
                    android:text="SELL"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/imagebuy" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progressbar"
        android:visibility="gone"/>



</RelativeLayout>